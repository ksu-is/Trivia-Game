def game():
    total = 0
    count = 0
    while count < 4:
        print("The categories are: Science \n History \n Pop Culture \n Sports")
        genre_choice = input("Chose a category: ")
        if genre_choice == "Science":
            print("You chose Science")
            print("Your first question is: What element makes up the majority of Earth's air?")
            answer = input("Is it Oxygen, Nitrogen, Helium, or Carbon Dioxide?")
            if answer == "Nitrogen":
                total += 1
                print("Correct!")
                print("Your score is now: ", total)
                game()
                total += 1
                count += 1
            else:
                print("Incorrect")     
                game()
                count += 1
game()
        
 



 
    

  
